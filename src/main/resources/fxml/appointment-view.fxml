<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="container" stylesheets="@../styles/doctor-view.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uv.mx.sistemasredproject.client.controllers.AppointmentViewController">
     <BorderPane>
         <left>
             <Label styleClass="view-label" text="Citas programadas" BorderPane.alignment="CENTER" />
         </left>
         <right>
             <HBox styleClass="button-container" BorderPane.alignment="CENTER">
                 <Button fx:id="add" mnemonicParsing="false" text="Agregar" />
                 <Button fx:id="edit" disable="true" mnemonicParsing="false" text="Editar" />
                 <Button fx:id="delete" disable="true" mnemonicParsing="false" text="Eliminar" />
             </HBox>
         </right>
     </BorderPane>
    <ListView fx:id="appointmentListView" styleClass="doctor-list" />
</VBox>
