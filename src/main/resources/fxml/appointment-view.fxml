<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="container" stylesheets="@../styles/doctor-view.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uv.mx.sistemasredproject.client.controllers.AppointmentViewController">
     <BorderPane>
         <left>
             <Label styleClass="view-label" text="Citas programadas" BorderPane.alignment="CENTER" />
         </left>
         <right>
             <HBox styleClass="button-container" BorderPane.alignment="CENTER">
            <Button fx:id="refresh" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Actualizar" />
                 <Button fx:id="add" mnemonicParsing="false" text="Agregar" />
                 <Button fx:id="edit" disable="true" mnemonicParsing="false" text="Editar" />
                 <Button fx:id="delete" disable="true" mnemonicParsing="false" text="Eliminar" />
             </HBox>
         </right>
     </BorderPane>
    <ListView fx:id="appointmentListView" styleClass="doctor-list" />
</VBox>
